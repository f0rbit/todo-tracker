{
    "tags": [
        {
            "name": "todo",
            "match": [
                "@todo",
                "TODO:"
            ]
        },
        {
            "name": "bug",
            "match": [
                "@bug",
                "BUG:"
            ]
        },
        {
            "name": "note",
            "match": [
                "@note",
                "NOTE:"
            ]
        }
    ],
    "ignore": [
        ".*node_modules.*",
        ".*\\.next.*"
    ]
}
